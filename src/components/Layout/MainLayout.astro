---
import Navbar from './Navbar.astro'
import Footer from './Footer.astro'


interface Props {
    title: string
}

const { title } = Astro.props
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator}>
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <title>{title} â€¢ Threads</title>
</head>
<body class="bg-primary text-white">
    <div>
        <Navbar />
        <main class="flex flex-col relative min-h-screen">
            <div class="w-screen flex justify-center px-5 content-center">
                <section class="flex min-h-screen max-w-[calc(100%-1.5*76px)]">
                    <div class="max-w-2xl w-2xl flex flex-col grow container">
                        <slot />
                    </div>
                </section>
            </div>
        </main>
        <Footer />
    </div>
</body>
</html>